{
  "compilerOptions": {
    /* Impostazioni del Progetto */
    "target": "ES2020",
    "module": "CommonJS",
    "moduleResolution": "node",
    "lib": ["ES2020", "DOM"],
    "outDir": "./netlify/functions",
    "rootDir": "./netlify/functions-ts",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,

    /* Controlli di Tipo Stretti */
    "strict": true,
    "skipLibCheck": true
  },
  "include": [
    "netlify/functions-ts/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
